{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "Node",
    "noEmit": true, // No need to emit .js files, Babel will handle that
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["@types/chrome"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
